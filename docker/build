#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

if [ "$1" == "--ci" ]; then SUFFIX=".ci"; else SUFFIX=""; fi

docker build -f $DIR/Dockerfile$SUFFIX \
             -t openstax/kitchen$SUFFIX:latest \
             --build-arg bundler_version=2.2.4 \
             $DIR/..
